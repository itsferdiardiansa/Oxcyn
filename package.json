{
  "name": "oxcyn",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "reset": "npx nx reset",
    "format": "pnpm nx run-many -t format",
    "format:write": "pnpm nx run-many -t format:write",
    "lint": "pnpm nx run-many -t lint",
    "lint:fix": "pnpm nx run-many -t lint:fix",
    "test": "pnpm nx run-many -t test",
    "test:coverage": "pnpm nx run-many -t test:coverage",
    "generate-coverage": "node ./scripts/generate-coverage.js",
    "generate-sonar-properties": "./scripts/generate-sonar-properties.sh"
  },
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@jest/globals": "^29.7.0",
    "@nx/js": "18.0.8",
    "@vercel/analytics": "^1.1.4",
    "@vercel/node": "^3.0.19",
    "@vercel/remote-nx": "^2.0.0",
    "@vercel/speed-insights": "^1.0.10",
    "chalk": "^4.1.2",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.3",
    "nx": "18.0.8",
    "nyc": "^15.1.0",
    "prettier": "^3.1.1"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "pnpm": {
    "default": "7.3.0"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "pnpm run format:write",
      "pnpm run lint:fix",
      "pnpm run test"
    ],
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "vercel": "^33.5.0"
  }
}
