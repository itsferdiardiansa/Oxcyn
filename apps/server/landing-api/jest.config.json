{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "src",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s",
    "!**/dto/**",
    "!**/*.(module|models).(t|j)s",
    "!**/main.(t|j)s"
  ],
  "coveragePathIgnorePatterns": [
    "<rootDir>/config",
    "<rootDir>/common",
    "<rootDir>/providers"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1"
  }
}