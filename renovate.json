{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "packageRules": [
    {
      "matchPackageNames": ["node", "npm"],
      "enabled": false
    },
    {
      "matchPackageNames": ["@types/node"],
      "allowedVersions": "^14"
    },
    {
      "groupName": "Oxcyn packages",
      "matchPackagePrefixes": [
        "@oxcyn/"
      ],
      "enabled": false
    }
  ]
}
